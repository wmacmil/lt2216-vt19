  <form id="askFrom">
    <field name="fromField">
      <prompt>
        What city are you leaving from? 
      </prompt>
      <option>london</option>
      <option>paris</option>
      <option>new york</option>
    </field>
    <filled>
      <assign name="from" expr="fromField" />
      <goto next="#askTo" />
    </filled>
  </form>

  <form id="askTo">
    <field name="toField">
      <prompt>
        Where are you going?
      </prompt>
      <option>london</option>
      <option>paris</option>
      <option>new york</option>
    </field>
    <filled>
      <assign name="to" expr="toField" />
      <goto next="#askDate" />
    </filled>
  </form>

  <form id="askDate">
    <field name="dateField">
      <prompt>
        What date do you want to leave from <value expr="from"/>?
      </prompt>
      <option>Monday</option>
      <option>Tuesday</option>
      <option>Wednesday</option>
      <option>Thursday</option>
      <option>Friday</option>
      <option>Saturday</option>
      <option>Sunday</option>
    </field>
    <filled>
      <assign name="date" expr="dateField" />
      <goto next="#askOneWay" />
    </filled>
  </form>

  <form id="askOneWay">
    <field name="oneWayField" type="boolean">
      <prompt>
        Is it a one way trip?
      </prompt>
      <filled>
        <if cond="oneWayField">
          <goto next="#confirmDate" />
        <else />
          <goto next="#askReturn" />
        </if>
      </filled>
    </field>
  </form>

  <form id="confirmDate">
    <field name="oneWayFieldd" type="boolean">
      <prompt>
        Do you want to leave from <value expr="from"/> to <value expr="to"/> on <value expr="date"/> 
      </prompt>
      <filled>
        <if cond="oneWayFieldd">
          <goto next="#confirm" />
        <else />
          <goto next="#askFrom" />
        </if>
      </filled>
    </field>
  </form>

