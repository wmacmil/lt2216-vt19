<?xml version="1.0" encoding="UTF-8" ?>
<grammar version="1.0" tag-format="semantics/1.0" root="yn">

  <rule id="yn">
    <one-of>
      <item>yes<tag>out="yes";</tag></item>
      <item>yeah<tag>out="yes";</tag></item>
      <item>no<tag>out="no";</tag></item>
      <item>nope<tag>out="no";</tag></item>
    </one-of>
  </rule>

<!-- to do is to be  Socrates -->
<!-- to be is to do  Sartre -->
<!-- do be do be do  Sinatra -->

  <rule id="object">
    <one-of>
      <item>to do is to be <tag>out="Socrates";</tag></item>  
      <item>to be is to do <tag>out="Sartre";</tag> </item>
      <item>do be do be do <tag>out="Sinatra";</tag> </item> 
    </one-of>
  </rule>

  <rule id="object">
    <one-of>
       <item> light </item>
       <item> heat </item>
       <item> air conditioning </item>
       <item> window </item>
       <item> door </item>
    </one-of>
  </rule>

  <rule id="action">
    <one-of>
       <item> turn off </item>
       <item> turn on </item>
       <item> open </item>
       <item> close </item>
    </one-of>
  </rule>

  <rule id="conjunction">
    <one-of>
       <item> the </item>
       <item> turn </item>
       <item> open </item>
       <item> close </item>
    </one-of>
  </rule>

